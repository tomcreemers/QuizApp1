<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="QuizApp.Views.DifficultySelectionView"
    Title="Select Difficulty">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Choose Your Difficulty" 
               FontAttributes="Bold" 
               FontSize="20"
               HorizontalOptions="Center" />

        <!-- Hier bijvoorbeeld een Picker gebonden aan je ViewModel 
             (Topics en Levels). Deze is ter illustratie. -->
        <Picker Title="Select a Topic" />

        <Picker Title="Select a Level" />

        <Button Text="Begin" 
                Clicked="OnBeginClicked" />

        <Button Text="Return" 
                Clicked="OnReturnClicked" />
    </VerticalStackLayout>
</ContentPage>
